{% extends 'CvPlatformUserBundle:Profile:show.html.twig' %}
{% block personal_informations%}
<h2>Skills</h2>
<div class="well">
    <div class="skills">
        {% for skill in skills %}
            <span class="label label-success">{{ skill.libel }}</span>
        {% endfor %}
    </div>
</div>
<div class="well">
    <form method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
{% endblock personal_informations%}