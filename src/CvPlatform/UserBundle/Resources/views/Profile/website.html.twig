{% extends 'CvPlatformUserBundle:Profile:show.html.twig' %}
{% block personal_informations%}
<h2>Websites</h2>
<div class="well">
    <div class="websites">
        {% for website in websites %}
            <div class="website">
                {{ website.title }}: <a href="{{ website.url }}">{{ website.url }}</a> <a class="btn btn-danger btn-xs" href="{{ path('delete_user_website', { 'id': website.id }) }}">delete</a>
            </div>
        {% endfor %}
    </div>
</div>
<div class="well">
    <form method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
{% endblock personal_informations%}